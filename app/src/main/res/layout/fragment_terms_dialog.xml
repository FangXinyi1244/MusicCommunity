<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Rectangle 803 - 半透明遮罩 -->
    <View
        android:id="@+id/rectangle_803"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/shadow_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Frame 2090052744 - 弹窗容器 -->
    <LinearLayout
        android:id="@+id/frame_2090052744"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="239dp"
        android:minWidth="283dp"
        android:layout_marginTop="316dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="188dp"
            android:background="@drawable/round_layout"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            >
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="188dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="69dp"
                    android:paddingTop="25dp"
                    android:paddingBottom="16dp">
                    <TextView
                        android:layout_width="239dp"
                        android:layout_height="28dp"
                        android:text="@string/terms_and_privacy_policy"
                        android:fontFamily="@font/mi_sans_vf"
                        android:textSize="21sp"
                        android:textColor="#000000"
                        android:textFontWeight="380"
                        android:letterSpacing="0"
                        android:lineSpacingMultiplier="1.0"
                        android:gravity="center"
                        android:includeFontPadding="false"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="89dp"
                    android:paddingBottom="9dp">
                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="239dp"
                        android:layout_height="80dp"
                        android:text="@string/terms_and_conditions_text"
                        android:fontFamily="@font/mi_sans_vf"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        android:textFontWeight="380"
                        android:letterSpacing="0"
                        android:lineSpacingMultiplier="1.0"
                        android:includeFontPadding="false"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingBottom="11dp"
                    android:gravity="center">


                    <TextView
                        android:id="@+id/cancel_button"
                        android:layout_width="wrap_content"
                        android:layout_height="19dp"
                        android:text="@string/decline"
                        android:fontFamily="@font/mi_sans_vf"
                        android:textSize="14sp"
                        android:textColor="@color/text_background_black_20"
                        android:textFontWeight="380"
                        android:letterSpacing="0"
                        android:lineSpacingMultiplier="1.0"
                        android:gravity="center"
                        android:background="#FFFFFF"
                        android:includeFontPadding="false"
                        android:clickable="true" />

                </LinearLayout>
            </LinearLayout>



        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button"
            android:layout_width="283dp"
            android:layout_height="51dp"
            android:background="@drawable/round_button"
            app:backgroundTint="#3482FF"
            android:text="@string/accept_and_continue" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
